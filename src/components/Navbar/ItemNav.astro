---
interface Props {
  href: string;
  isActive: boolean;
}

const { href, isActive } = Astro.props;
---

<li>
  <a
    href={href}
    class:list={[
      "hover:text-red-500 transition-colors duration-200 font-semibold",
      isActive ? "text-red-500" : "text-gray-700",
    ]}
  >
    <slot />
  </a>

  {
    isActive && (
      <div transition:name="underline" class="border-b-2 border-red-500" />
    )
  }
</li>
