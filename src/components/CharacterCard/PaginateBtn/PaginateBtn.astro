---
interface Props {
  page: {
    url: {
      next?: string;
      prev?: string;
    };
  };
  isPreview?: boolean;
}

const { page, isPreview } = Astro.props;
---

<a
  href={!isPreview ? page.url.next : page.url.prev}
  class:list={[
    "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition ml-4",
    {
      "opacity-50 cursor-not-allowed": !isPreview
        ? !page.url.next
        : !page.url.prev,
    },
  ]}
>
  <slot />
</a>
