---
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout title="Favorites">
  <img src="/Marvel_Logo.svg" alt="Marvel Logo" class="w-48 mx-auto my-6" />

  <h1 class="text-3xl mb-10 text-center uppercase font-extrabold">
    My Favorite Characters
  </h1>

  <section
    aria-label="list of favorite characters"
    class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-4 gap-12"
  >
    <p class="text-center col-span-full">
      Coming soon! This page will display your favorite characters.
    </p>
  </section>
</MainLayout>
